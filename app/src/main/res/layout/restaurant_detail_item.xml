<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="50dp">

  <TextView
    android:id="@+id/detail_item_title"
    android:layout_width="65dp"
    android:layout_height="match_parent"
    android:background="#ff0000"
    android:gravity="center"
    android:lineSpacingExtra="4dp"
    android:maxLines="2"
    android:padding="5dp"
    android:textColor="#ffffff"
    android:textSize="13dp" />

  <TextView
    android:id="@+id/detail_item_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toRightOf="@+id/detail_item_title"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:lineSpacingExtra="4dp"
    android:maxLines="2"
    android:padding="10dp"
    android:textColor="#000000"
    android:textSize="13dp" />

  <View
    android:id="@+id/detail_item_bottom_divider1"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignLeft="@+id/detail_item_title"
    android:layout_alignRight="@+id/detail_item_title"
    android:layout_alignParentBottom="true"
    android:background="#ffffff" />

  <View
    android:id="@+id/detail_item_bottom_divider2"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignLeft="@+id/detail_item_description"
    android:layout_alignRight="@+id/detail_item_description"
    android:layout_alignParentBottom="true"
    android:background="@color/theme_color" />

</merge>