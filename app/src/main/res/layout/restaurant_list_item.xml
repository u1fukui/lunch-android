<?xml version="1.0" encoding="utf-8"?>

<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="90dp">

  <ImageView
    android:id="@+id/restaurant_thumbnail"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:scaleType="centerCrop" />

  <TextView
    style="@style/RestaurantListItemText"
    android:id="@+id/restaurant_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/restaurant_thumbnail"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:textStyle="bold" />

  <TextView
    style="@style/RestaurantListItemText"
    android:id="@+id/restaurant_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/restaurant_name"
    android:layout_alignRight="@+id/restaurant_name"
    android:layout_below="@+id/restaurant_name"
    android:layout_marginTop="5dp" />

  <TextView
    style="@style/RestaurantListItemText"
    android:id="@+id/restaurant_holiday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/restaurant_name"
    android:layout_alignRight="@+id/restaurant_name"
    android:layout_below="@+id/restaurant_time"
    android:layout_marginTop="4dp" />

  <TextView
    style="@style/RestaurantListItemText"
    android:id="@+id/restaurant_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/restaurant_name"
    android:layout_alignRight="@+id/restaurant_name"
    android:layout_below="@+id/restaurant_holiday"
    android:layout_marginTop="4dp" />

</merge>